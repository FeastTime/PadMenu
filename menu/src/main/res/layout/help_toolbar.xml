<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/help_toolbar_wifi_tv"
        android:layout_width="80px"
        android:layout_height="80px"
        android:paddingTop="13px"
        android:gravity="center"
        android:text="wifi"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size"
        android:drawablePadding="0px"
        android:background="@drawable/help_toolbar_item_bg"
        android:drawableTop="@mipmap/wifi_icon"
        />


    <TextView
        android:id="@+id/help_toolbar_login_tv"
        android:layout_width="80px"
        android:layout_height="80px"
        android:gravity="center"
        android:paddingTop="13px"
        android:drawableTop="@mipmap/login_icon"
        android:drawablePadding="0px"
        android:layout_marginTop="3px"
        android:text="登录"
        android:textColor="@color/white"
        android:background="@drawable/help_toolbar_item_bg"
        android:textSize="@dimen/normal_text_size"
        />


    <TextView
        android:id="@+id/help_toolbar_sale_tv"
        android:layout_width="80px"
        android:layout_height="80px"
        android:gravity="center"
        android:paddingTop="13px"
        android:drawablePadding="0px"
        android:drawableTop="@mipmap/sale_icon"
        android:layout_marginTop="3px"
        android:background="@drawable/help_toolbar_item_bg"
        android:text="优惠"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size" />

</LinearLayout>