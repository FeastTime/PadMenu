<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">

    <include
        android:id="@+id/main_activity_title_bar"
        layout="@layout/title_bar_layout"
        android:layout_marginTop="42px"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
    </include>


    <RelativeLayout
        android:id="@+id/main_activity_recommend_rel"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:paddingTop="10px"
        android:layout_height="358px">

        <com.feasttime.widget.HorizontalListView
            android:id="@+id/main_activity_recommend_lv"
            android:layout_marginLeft="220px"
            android:layout_marginRight="220px"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </com.feasttime.widget.HorizontalListView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/recharge_icon"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/main_activity_recharge_tv"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:paddingTop="10dp"
                android:textColor="@color/white"
                android:text="充值500\n送100"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40px"
        android:layout_below="@+id/main_activity_title_bar"
        android:layout_above="@+id/main_activity_recommend_rel"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/main_fragment_container_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
