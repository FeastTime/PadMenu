<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="86px"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
   >

    <LinearLayout
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/title_bar_bell_ib"
            android:layout_width="86px"
            android:layout_height="86px"
            android:src="@mipmap/bell_icon"
            android:background="@drawable/right_menu_bg"
            android:foregroundGravity="center"
            />

    </LinearLayout>



    <RelativeLayout
        android:id="@+id/title_bar_cart_rel"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        >

        <ImageButton
            android:id="@+id/title_bar_cart_ib"
            android:layout_width="86px"
            android:layout_height="86px"
            android:src="@mipmap/cart_icon"
            android:background="@drawable/right_menu_bg"
            android:foregroundGravity="center"
            android:layout_centerHorizontal="true"
            />


        <TextView
            android:id="@+id/title_bar_cart_num_tv"
            android:layout_width="35px"
            android:layout_height="35px"
            android:gravity="center"
            android:layout_marginLeft="50px"
            android:background="@drawable/red_cycle_shape"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="0"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_toLeftOf="@+id/title_bar_cart_rel"
        android:layout_width="match_parent"
        android:background="@drawable/title_bar_bg"
        android:layout_height="86px"
        android:layout_marginLeft="85dp"
        >
        <HorizontalScrollView
            android:layout_width="1300px"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/title_bar_content_ll"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:layout_height="match_parent">

            </LinearLayout>

        </HorizontalScrollView>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/title_bar_layout_staff_entry_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="员工入口"
                android:drawablePadding="3px"
                android:drawableTop="@mipmap/staff_entry"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginRight="100px"
                />

            <ImageButton
                android:id="@+id/title_bar_layout_menu_ib"
                android:layout_width="86px"
                android:layout_height="86px"
                android:src="@mipmap/right_menu_icon"
                android:background="@drawable/right_menu_bg"
                android:paddingRight="0dp"
                />

        </LinearLayout>

    </RelativeLayout>





</RelativeLayout>