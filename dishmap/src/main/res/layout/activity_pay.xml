<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_bg_gray"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y128"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/x89"
                android:layout_height="1dp"
                android:background="@color/text_gray_2" />

            <View
                android:layout_width="@dimen/x9"
                android:layout_height="@dimen/x9"
                android:background="@drawable/gray_circle"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="通道说明" />

            <View
                android:layout_width="@dimen/x9"
                android:layout_height="@dimen/x9"
                android:background="@drawable/gray_circle"></View>

            <TextView
                android:layout_width="@dimen/x89"
                android:layout_height="1dp"
                android:background="@color/text_gray_2" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_text_size"
        android:drawableLeft="@mipmap/right_icon"
        android:drawablePadding="@dimen/x10"
        android:textSize="@dimen/small_text_size"
        android:text="承诺人均最低消费100元" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/text_gray_1"
        android:layout_marginTop="@dimen/y62"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_text_size"
        android:layout_marginTop="@dimen/y76"
        android:text="通道费用"/>





</LinearLayout>