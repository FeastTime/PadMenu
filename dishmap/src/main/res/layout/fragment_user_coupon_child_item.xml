<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/white_bg_radius_5_with_stroke"
    android:layout_height="@dimen/y200">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y28"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/x48"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/fragment_user_coupon_child_item_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/very_big_text_size_2"
                        android:textColor="@color/orange_color"
                        android:includeFontPadding="false"
                        android:visibility="gone"
                        android:text="0" />



                </LinearLayout>


                <TextView
                    android:id="@+id/fragment_user_coupon_child_item_coupon_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/normal_text_size"
                    android:includeFontPadding="false"
                    android:textColor="@color/orange_color"
                    android:layout_marginTop="@dimen/y10"
                    android:text="0" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x54"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/fragment_user_coupon_child_item_coupon_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_gray_design_1"
                        android:textSize="@dimen/normal_text_size"
                        android:text="0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y26"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/very_small_text_size"
                        android:text="有效期:"/>

                    <TextView
                        android:id="@+id/fragment_user_coupon_child_item_expire_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:textColor="@color/text_dark_gray"
                        android:textSize="@dimen/very_small_text_size"
                        android:text="0"/>
                </LinearLayout>

            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/x120"
        android:layout_height="@dimen/x120"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginRight="@dimen/x30"
        android:src="@mipmap/qr_code_image"/>


    <ImageView
        android:id="@+id/fragment_user_coupon_child_item_flag_icon_Iv"
        android:layout_width="@dimen/x109"
        android:layout_height="@dimen/y126"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/y10"
        android:visibility="gone"
        android:src="@mipmap/no_used_coupon_flag_icon"/>

</RelativeLayout>