<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg_radius_5"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="性别"
        android:paddingTop="@dimen/x25"
        android:paddingLeft="@dimen/x15"
        android:textSize="@dimen/very_big_text_size"
        android:textColor="@color/text_dark_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_gender_man_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="男"
            android:paddingLeft="@dimen/x30"
            android:paddingTop="@dimen/y25"
            android:paddingBottom="@dimen/y20"
            android:textSize="@dimen/big_text_size_2"
            android:textColor="@color/text_dark_gray"/>

        <TextView
            android:id="@+id/dialog_gender_woman_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="女"
            android:paddingTop="@dimen/y20"
            android:paddingLeft="@dimen/x30"
            android:paddingBottom="@dimen/y25"
            android:textSize="@dimen/big_text_size_2"
            android:textColor="@color/text_dark_gray"/>

    </LinearLayout>



</LinearLayout>