<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y232"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/x372"
            android:layout_height="@dimen/y126"
            android:src="@mipmap/logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y26"
            android:text="E T C E 先吃"
            android:textColor="@color/splash_blue"
            android:textSize="@dimen/normal_text_size" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/y143"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/login_wechat"/>

        <TextView
            android:layout_width="@dimen/x688"
            android:layout_height="@dimen/y89"
            android:textColor="@color/white"
            android:text="使用微信授权登录"
            android:gravity="center"
            android:textSize="@dimen/very_big_text_size"
            android:layout_marginTop="@dimen/y40"
            android:background="@mipmap/merchant_open_table_bg"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/y40"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:src="@mipmap/orange_right"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x24"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/text_gray_5"
                android:text="同意《ETCE优先吃用户协议》"/>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>