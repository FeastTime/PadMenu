<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x734"
        android:orientation="vertical"
        android:background="@mipmap/no_bonus_bg"
        android:gravity="center_horizontal|bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="很遗憾，未中奖～"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/y13"
            android:textSize="@dimen/big_text_size_2"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y22"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_grap_table_loser_result_tv"
                android:layout_width="wrap_content"
                android:includeFontPadding="false"
                android:layout_height="wrap_content"
                android:textSize="@dimen/big_text_size"
                android:textColor="@color/white"
                android:visibility="invisible"
                android:text="结果"
                />
        </LinearLayout>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/text_red_3"
            android:textSize="@dimen/normal_text_size"
            android:layout_marginBottom="@dimen/y18"
            android:text="送您10个金币"
            />

        <TextView
            android:id="@+id/dialog_grap_table_loser_replay_tv"
            android:layout_width="@dimen/x212"
            android:layout_height="@dimen/y46"
            android:text="再来一把"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_marginBottom="@dimen/y45"
            android:background="@drawable/yellow_bg_radius_50"
            android:textSize="@dimen/big_text_size"
            android:textColor="@color/text_red_2"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_grap_table_loser_close_iv"
        android:layout_width="@dimen/x70"
        android:layout_height="@dimen/y227"
        android:src="@mipmap/grap_table_close"
        android:scaleType="fitXY"
        />

</LinearLayout>