<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF">

    <FrameLayout
        android:id="@+id/activity_main_content_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/y100">

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/activity_main_btm_menu_rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentBottom="true"
        android:background="#234345">

        <TextView
            android:id="@+id/activity_main_home_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="首页"
            />

        <TextView
            android:id="@+id/activity_main_coupon_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:text="优惠券"
            />

        <TextView
            android:id="@+id/activity_main_mine_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:text="优惠券"
            />

    </RelativeLayout>
</RelativeLayout>