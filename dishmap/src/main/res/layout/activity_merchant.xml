<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y128"></include>

    <LinearLayout
        android:id="@+id/activity_merchant_tab_bar_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:layout_alignParentBottom="true"
        android:background="@mipmap/merchant_btm_bg"
        android:gravity="bottom"
        android:paddingBottom="@dimen/y9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/activity_merchant_open_table_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:drawableTop="@mipmap/setting"
            android:text="放桌"
            android:textSize="@dimen/normal_text_size"
            android:drawablePadding="@dimen/y4"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/activity_merchant_reach_store_confirm_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:drawablePadding="@dimen/y4"
            android:drawableTop="@mipmap/confirm"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/white"
            android:text="到店确认"
            />

        <TextView
            android:id="@+id/activity_merchant_mine_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/y4"
            android:gravity="center_horizontal"
            android:drawableTop="@mipmap/mine"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text_size"
            android:text="我的"
            />
    </LinearLayout>


    <FrameLayout
        android:id="@+id/activity_merchant_content_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_layout"
        android:layout_above="@+id/activity_merchant_tab_bar_ll">

    </FrameLayout>
</RelativeLayout>