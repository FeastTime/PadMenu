<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg_radius_5_with_stroke"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/fragment_merchant_reach_store_confirm_lv_item_icon_iv"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_marginTop="@dimen/y42"
            android:layout_marginLeft="@dimen/x60"
            android:src="@mipmap/temp_icon_1"
            />

        <TextView
            android:id="@+id/fragment_merchant_reach_store_confirm_lv_item_name_tv"
            android:layout_marginTop="@dimen/y42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x210"
            android:includeFontPadding="false"
            android:textSize="@dimen/normal_text_size"
            android:text="0"
            />

        <TextView
            android:id="@+id/fragment_merchant_reach_store_confirm_lv_item_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x210"
            android:layout_marginTop="@dimen/y12"
            android:includeFontPadding="false"
            android:textSize="@dimen/small_text_size"
            android:layout_below="@+id/fragment_merchant_reach_store_confirm_lv_item_name_tv"
            android:text="0"
            />


        <TextView
            android:id="@+id/fragment_merchant_reach_store_confirm_lv_item_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x210"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/y19"
            android:textSize="@dimen/very_small_text_size"
            android:layout_below="@+id/fragment_merchant_reach_store_confirm_lv_item_number_tv"
            android:text="0"
            />

        <TextView
            android:id="@+id/fragment_merchant_reach_store_confirm_lv_item_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x210"
            android:textSize="@dimen/very_small_text_size"
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/fragment_merchant_reach_store_confirm_lv_item_type_tv"
            android:layout_alignTop="@+id/fragment_merchant_reach_store_confirm_lv_item_type_tv"
            android:text="0"
            />

        <TextView
            android:id="@+id/fragment_merchant_reach_store_confirm_lv_item_flag_tv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/fragment_merchant_reach_store_confirm_lv_item_icon_iv"
            android:layout_marginTop="@dimen/y42"
            android:includeFontPadding="false"
            android:background="@color/text_hint_gray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x86"
            android:orientation="horizontal"
            android:layout_below="@+id/fragment_merchant_reach_store_confirm_lv_item_flag_tv"
            android:gravity="center_vertical|right">


            <TextView
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/y48"
                android:gravity="center"
                android:background="@drawable/white_bg_radius_5_with_stroke"
                android:textSize="@dimen/very_small_text_size"
                android:text="取消"


                />
            <TextView
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/y48"
                android:gravity="center"
                android:background="@drawable/white_bg_radius_5_with_stroke"
                android:textSize="@dimen/very_small_text_size"
                android:text="延时"
                android:layout_marginLeft="@dimen/x20"
                />

            <TextView
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/y48"
                android:background="@drawable/white_bg_radius_5_with_stroke"
                android:textSize="@dimen/very_small_text_size"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:text="未到店"
                />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>