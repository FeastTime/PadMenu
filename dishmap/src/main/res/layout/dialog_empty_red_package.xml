<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DB5942"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="红包被抢光了！"
        android:gravity="center_vertical"
        android:textColor="@color/white"
        android:drawablePadding="@dimen/x10"
        android:textSize="@dimen/very_big_text_size_2"
        android:layout_marginTop="@dimen/y85"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y32"
        android:orientation="horizontal">

       <ImageView
           android:id="@+id/user_icon"
           android:layout_width="@dimen/y150"
           android:layout_height="@dimen/y150" />

    </LinearLayout>

    <TextView
        android:id="@+id/show_others_luck"
        android:layout_width="@dimen/x438"
        android:layout_height="@dimen/y88"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/big_text_size_2"
        android:layout_marginTop="@dimen/y69"
        android:text="看看大家手气 >"
        />

</LinearLayout>