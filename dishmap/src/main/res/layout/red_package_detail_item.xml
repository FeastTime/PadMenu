<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y183"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/red_package_detail_user_icon_iv"
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x70"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x42"
            android:src="@mipmap/default_user_icon" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x144"
            android:layout_marginTop="@dimen/y51"
            android:orientation="vertical">

            <TextView
                android:id="@+id/red_package_detail_nick_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="aa"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size" />


            <TextView
                android:id="@+id/red_package_detail_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y25"
                android:includeFontPadding="false"
                android:text="bb"
                android:textColor="@color/text_gray_3"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>


        <TextView
            android:id="@+id/red_package_detail_redpackage_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y50"
            android:includeFontPadding="false"
            android:text="cc"
            android:textColor="@color/text_gary_4"
            android:textSize="@dimen/small_text_size"

            />

        <ImageView
            android:id="@+id/red_package_detail_is_best_iv"
            android:layout_width="@dimen/x138"
            android:layout_height="@dimen/y40"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y102"
            android:src="@mipmap/is_best_luck"/>


    </RelativeLayout>
</LinearLayout>