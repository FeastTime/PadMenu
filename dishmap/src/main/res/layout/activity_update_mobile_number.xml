<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y128"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_set_user_info_avatar_iv"
                android:layout_width="@dimen/x134"
                android:layout_height="@dimen/x214"
                android:src="@mipmap/set_mobile_no"
                android:layout_marginTop="@dimen/y50"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y48"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机号"
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/very_big_text_size"
                    />

                <TextView
                    android:id="@+id/activity_update_mobile_no_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="30"
                    android:paddingLeft="@dimen/x5"
                    android:enabled="false"
                    android:layout_marginLeft="@dimen/x14"
                    android:textColor="@color/text_gray_1"
                    android:textSize="@dimen/very_big_text_size"
                    android:text=""
                    />

            </LinearLayout>


            <Button
                android:id="@+id/activity_set_user_info_nick_save_btn"
                android:layout_width="@dimen/x540"
                android:layout_height="@dimen/y88"
                android:background="@mipmap/change_mobile_number_bt"
                android:text="更换手机号"
                android:textSize="@dimen/big_text_size"
                android:layout_marginTop="@dimen/y100"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </ScrollView>



</LinearLayout>