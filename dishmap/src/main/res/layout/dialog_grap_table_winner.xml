<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/dialog_grap_table_result_close_iv"
        android:layout_width="@dimen/x70"
        android:layout_height="@dimen/y70"
        android:layout_gravity="right"
        android:src="@mipmap/dishmap_luck_close"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:layout_width="@dimen/x606"
        android:layout_height="@dimen/x734"
        android:orientation="vertical"
        android:background="@mipmap/get_bonus_bg"
        android:gravity="center_horizontal|bottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom"
            >

            <TextView
                android:id="@+id/dialog_grap_table_result_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text=""
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/y1"
                android:textSize="@dimen/big_text_size_2"
                />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y0"
                android:layout_weight="2">

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y0"
                android:gravity="center"
                android:layout_weight="3">

                <TextView
                    android:id="@+id/dialog_grap_table_result_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/y24"
                    android:includeFontPadding="false"
                    android:textSize="@dimen/big_text_size_2"
                    android:textColor="@color/white"
                    android:singleLine="false"
                    android:text="详细信息"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y0"
                android:gravity="center"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/dialog_grap_table_describe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:textColor="@color/text_red_3"
                    android:textSize="@dimen/big_text_size_2"
                    android:text=""
                    />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/dialog_grap_table_result_use_now_iv"
        android:layout_marginTop="@dimen/y80"
        android:layout_width="@dimen/x254"
        android:layout_height="@dimen/y84"
        android:src="@mipmap/dishmap_use_now"
        android:scaleType="fitXY"
        />

</LinearLayout>