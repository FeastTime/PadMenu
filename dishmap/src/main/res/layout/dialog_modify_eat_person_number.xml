<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_bg_radius_5"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y85"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <Switch
            android:id="@+id/only_get_coupon_Sw"
            android:shadowColor="@color/blue"
            android:thumb="@drawable/dishmap_thumb"
            android:track="@drawable/dishmap_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="@dimen/x20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="只抢优惠券"

            android:textColor="@color/text_gray_1"
            android:drawablePadding="@dimen/x10"
            android:textSize="@dimen/very_big_text_size"

            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y32"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_gray_1"
            android:textSize="@dimen/big_text_size"
            android:text="就餐人数"/>

        <EditText
            android:id="@+id/dialog_modify_eat_person_number_diner_count"
            android:layout_width="@dimen/x174"
            android:layout_height="@dimen/y58"
            android:layout_marginLeft="@dimen/x18"
            android:hint="0"
            android:textColorHint="@color/gray"
            android:gravity="center"
            android:textColor="@color/black"
            android:background="@drawable/white_bg_radius_5_with_stroke"
            android:inputType="number"
            android:maxLength="3"
            />

        <TextView
            android:layout_marginLeft="@dimen/x18"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人"/>

    </LinearLayout>

    <TextView


        android:layout_marginTop="@dimen/y40"
        android:textColor="@color/splash_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/big_text_size"
        android:text="“只抢优惠券”为打开状态，将无法抢到座位"/>


    <Button
        android:id="@+id/dialog_modify_eat_person_number_confirm_btn"
        android:layout_width="@dimen/x438"
        android:layout_height="@dimen/y88"
        android:background="@mipmap/radius_btn_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/very_big_text_size"
        android:layout_marginTop="@dimen/y40"
        android:text="确定"
        />

</LinearLayout>