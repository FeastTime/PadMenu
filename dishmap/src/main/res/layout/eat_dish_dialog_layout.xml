<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_bg_radius_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="@dimen/x312"
            android:layout_height="@dimen/y33"
            android:text="美味专场"
            android:gravity="center"
            android:textColor="@color/text_red"
            android:layout_marginTop="@dimen/y52"
            android:textSize="@dimen/small_text_size"
            android:background="@mipmap/eat_dish_dialog_title"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全聚德"
            android:textColor="@color/text_red"
            android:layout_marginTop="@dimen/y15"
            android:includeFontPadding="true"
            android:textSize="@dimen/final_big_text_size"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="中华老字号"
            android:textColor="@color/text_red"
            android:includeFontPadding="true"
            android:textSize="@dimen/final_big_text_size"
            />

        <TextView
            android:layout_width="@dimen/x77"
            android:layout_height="@dimen/y10"
            android:layout_marginTop="@dimen/y20"
            android:background="@color/text_red"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y13"
            android:text="开启美味盛宴\n准备好了吗"
            android:gravity="center"
            android:textColor="@color/text_red"
            android:textSize="@dimen/very_big_text_size_2"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/y55"
            android:background="@color/line_gray"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/y36"
            >

            <ImageView
                android:layout_width="@dimen/x46"
                android:layout_height="@dimen/x46"
                android:src="@mipmap/green_right"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/normal_text_size"
                android:text="请输入"
                android:layout_marginLeft="@dimen/x12"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/y26"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/big_text_size_2"
                android:text="就餐人数"
                />

            <EditText
                android:id="@+id/eat_dish_dialog_person_num_et"
                android:layout_width="@dimen/x176"
                android:layout_height="@dimen/y60"
                android:hint="人数"
                android:layout_marginLeft="@dimen/x20"
                android:gravity="center"
                android:inputType="number"
                android:textSize="@dimen/big_text_size"
                android:background="@drawable/white_bg_radius_5_with_stroke"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/x20"
                android:textSize="@dimen/big_text_size_2"
                android:text="人"
                />

        </LinearLayout>


        <Button
            android:id="@+id/eat_dish_dialog_confirm_btn"
            android:layout_width="@dimen/x440"
            android:layout_height="@dimen/y90"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="@dimen/big_text_size_2"
            android:background="@mipmap/eat_dish_dialog_btn_bg"
            android:layout_marginTop="@dimen/y36"
            android:layout_marginBottom="@dimen/y42"
            />
    </LinearLayout>



    <TextView
        android:layout_width="@dimen/x117"
        android:layout_height="@dimen/x117"
        android:textColor="@color/white"
        android:text="口碑\n好店铺"
        android:textSize="@dimen/normal_text_size"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:background="@mipmap/eat_dish_dialog_right_top_flag"
        android:layout_marginTop="@dimen/y30"
        android:layout_marginRight="@dimen/x35"
        />
</RelativeLayout>