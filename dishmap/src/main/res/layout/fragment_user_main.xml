<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/fragment_user_main_slide_down_iv"
        android:layout_width="@dimen/x32"
        android:layout_height="@dimen/y54"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/y143"
        android:src="@mipmap/slide_downward" />

    <RelativeLayout
        android:id="@+id/fragment_user_main_top_img_rel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y700">

        <ImageView
            android:id="@+id/activity_main_bg_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/y3"
            android:scaleType="centerCrop"
            android:src="@mipmap/main_activity_bg" />

        <ImageView
            android:layout_width="@dimen/x750"
            android:layout_height="@dimen/y70"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@mipmap/main_activity_btm_cycle" />

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/fragment_user_main_scan_items_ll"
        android:layout_width="@dimen/x605"
        android:layout_height="@dimen/y514"
        android:layout_below="@+id/fragment_user_main_top_img_rel"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white_bg_radius_5"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_marginTop="@dimen/y52"
            android:background="@drawable/gray_bg_radius_5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/scan_icon" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y44"
            android:text="扫码进店"
            android:textColor="@color/black"
            android:textSize="@dimen/x30" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y37"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/y16"
            android:text="扫店铺二维码，进入店铺专属\n呼啦圈，有机会获得座位快速进店吃饭哦！"
            android:textColor="@color/black"
            android:textSize="@dimen/x22" />

        <Button
            android:id="@+id/fragment_user_main_start_scan_btn"
            android:layout_width="@dimen/x510"
            android:layout_height="@dimen/y80"
            android:layout_marginTop="@dimen/y80"
            android:background="@mipmap/scan_btn_bg"
            android:text="开始扫码"
            android:textColor="@color/white" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/fragment_user_main_right_menu_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="@dimen/x44"
        android:paddingLeft="@dimen/x50"
        android:paddingBottom="@dimen/x50"
        android:layout_marginTop="@dimen/y60">

        <ImageView
            android:id="@+id/fragment_user_main_right_menu_iv"
            android:layout_width="@dimen/x10"
            android:layout_height="@dimen/y54"
            android:src="@mipmap/right_menu"

            />
    </LinearLayout>

</RelativeLayout>